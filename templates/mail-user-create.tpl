<form action="?p=email-account&m=create" method="post">

        <div class="col-12 input-group">
            <input class="form-input col-5" type="text" name="username" placeholder="username" required/>
            <span class="input-group-addon">@</span>
            <select class="form-select" name="domain">
                [OPTION]
            </select>
        </div>
<div class="divider" data-content="Optional:">

</div>

    <div class="col-12 input-group">
        <input class="form-input col-5" name="name" type="text" placeholder="Name">
        <input class="form-input col-5" name="family" type="text" placeholder="FamilyName">
    </div>

    <div class="col-12 input-group">
        <input class="form-input col-5" name="password" type="password" placeholder="Password">
        <input class="form-input col-5" name="password2" type="password" placeholder="Password Repeated">
    </div>
    <div class="col-12 input-group">
        <input class="form-input col-5" name="contact_mail" type="email" placeholder="Contact Email">
    </div>

    <div class="row mb-6">
        <div class="c g3 m3-2">
            <button class="btn btn-primary">Absenden</button>
        </div>
    </div>
